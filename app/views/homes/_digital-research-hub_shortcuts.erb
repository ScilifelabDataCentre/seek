<%= panel("Other SciLifeLab Resources", id: 'drh-shortcuts', body_options: { class: 'front-page-panel' }) do %>
  <%= link_to 'https://data.scilifelab.se/', class: 'btn btn-default btn-block', target: '_blank', rel: 'noopener' do %>
    <%= image_tag 'logos/SciLifeLab_symbol_Green.png', alt: "SciLifeLab green symbol", style: 'height: 3em; margin-right: 5px' %>
    <strong>Data Platform</strong>
  <% end %>
  <%= link_to 'https://figshare.scilifelab.se/', class: 'btn btn-default btn-block', target: '_blank', rel: 'noopener' do %>
    <%= image_tag 'logos/fig.share_SpiralColour.png', alt: "fig.share spiral colour logo", style: 'height: 3em; margin-right: 5px' %>
